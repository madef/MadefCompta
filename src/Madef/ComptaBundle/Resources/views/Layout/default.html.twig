<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <!--<link rel="stylesheet" href="/style.css" />-->
            <title>{% block title %}{% endblock %} - {% trans %}app.title{% endtrans %}</title>
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            {% stylesheets 'bundles/madefcompta/css/*' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <meta charset='utf-8'>
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="{{ url('madef_compta_accountline_list') }}">{% trans %}app.title{% endtrans %}</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li {% if section == "list" %}class="active"{% endif %}><a href="{{ url('madef_compta_accountline_list') }}">{% trans %}account.title{% endtrans %}</a></li>
                            <li {% if section == 'add' %}class="active"{% endif %}><a href="{{ url('madef_compta_accountline_add') }}">+</a></li>
                            <li {% if section == 'listInvoice' %}class="active"{% endif %}><a href="{{ url('madef_compta_invoice_list') }}">{% trans %}invoice.title{% endtrans %}</a></li>
                            <li {% if section == 'addInvoice' %}class="active"{% endif %}><a href="{{ url('madef_compta_invoice_add') }}">+</a></li>
                                {% block navbarContent %}
                                {% endblock %}
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <div class="container">
            {% block content %}
            {% endblock %}
            <div id="footer">
                {% block footer %}
                {% endblock %}
            </div>
        </div>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script src="{{ asset('/js/compta.js') }}"></script>
        <script src="{{ asset('/js/bootstrap.min.js') }}"></script>
        {% javascripts '@MadefComptaBundle/Resources/public/js/*' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>
